{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "name": "Manny's Pale Ale",
            "maker": "Georgetown Brewing Company",
            "abv": "4.5",
            "description": "Unfiltered NW Pale Ale",
            "untappd_id": 1234556,
            "untappd_rating": 4.5,
            "img_url": "https://www.images.net/img34.jpg"
        }
    ],
    "required": [
        "name",
        "maker"
    ],
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Manny's Pale Ale"
            ]
        },
        "maker": {
            "$id": "#/properties/maker",
            "type": "string",
            "title": "The maker schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Georgetown Brewing Company"
            ]
        },
        "abv": {
            "$id": "#/properties/abv",
            "type": "string",
            "title": "The abv schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "4.5"
            ]
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Unfiltered NW Pale Ale"
            ]
        },
        "untappd_id": {
            "$id": "#/properties/untappd_id",
            "type": "integer",
            "title": "The untappd_id schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                1234556
            ]
        },
        "untappd_rating": {
            "$id": "#/properties/untappd_rating",
            "type": "number",
            "title": "The untappd_rating schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0.0,
            "examples": [
                4.5
            ]
        },
        "img_url": {
            "$id": "#/properties/img_url",
            "type": "string",
            "title": "The img_url schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "https://www.images.net/img34.jpg"
            ],
            "format" : "uri"
        }
    },
    "additionalProperties": false
}